{# templates/home/rent_car_popup.html.twig #}
  
{% block body %}
<style>
   .popup-rent-container {
    all: unset;

    display: none;
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    background-color: rgba(255, 255, 255, 0.822);
    backdrop-filter: blur(8px);
    border-radius: 10px;
    padding: 10px 15px 10px 15px;
    border: 1px solid #ccc;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    z-index: 1000;
}
.popup-rent-container:hover {
    border: 3px solid #494646;
    transition: border-color 0.2s ease-in-out;
}
.popup-rent-container .popup-titles{
    display: flex;
    justify-content: center;
    align-items: center;
}
.popup-rent-container .popup-titles h2 {
    color: black; 
    font-size: 30px;
    font-weight: 600;
}
.popup-rent-container .car-details{
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    margin-bottom: 10px;

}
.popup-rent-container .car-details p {
    margin-bottom: 3px;
}
.popup-rent-container .sub-container{
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
}
.popup-rent-container label {
    display: block;
    margin-bottom: 10px;
